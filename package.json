{
  "name": "awesome-nutrition-calculator",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "lint": "eslint --ext .js ./",
    "test": "mocha",
    "psql": "docker exec -it postgres psql -U user awesome-nutrition-calculator",
    "db:migrate": "docker exec -it service node_modules/.bin/sequelize db:migrate",
    "db:seed": "docker exec -it service node_modules/.bin/sequelize db:seed"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    },
    "plugins": [
      "chai-friendly"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "author": "Roland Kawka",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^14.0.2",
    "morgan": "^1.9.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.38.1",
    "sequelize-cli": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "pre-commit": "^1.2.2"
  }
}
